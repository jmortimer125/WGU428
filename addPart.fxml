                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </RadioButton>
        <Label text="ADD PARTS">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </Label>
        <TextField fx:id="addPartID" disable="true" editable="false" layoutX="179.0" layoutY="161.0" promptText="auto generated" AnchorPane.leftAnchor="100.0" />
        <Label layoutX="88.0" layoutY="166.0" text="ID" AnchorPane.leftAnchor="30.0" />
        <TextField fx:id="addPartName" layoutX="179.0" layoutY="217.0" AnchorPane.leftAnchor="100.0" />
