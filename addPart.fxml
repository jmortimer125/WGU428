        <TextField fx:id="addPartInv" layoutX="179.0" layoutY="274.0" AnchorPane.leftAnchor="100.0" />
        <Label layoutX="86.0" layoutY="279.0" text="Inv" AnchorPane.leftAnchor="30.0" />
        <TextField fx:id="addPartCost" layoutX="179.0" layoutY="337.0" AnchorPane.leftAnchor="100.0" />
        <Label layoutX="86.0" layoutY="342.0" text="Price/Cost" AnchorPane.leftAnchor="30.0" />
        <TextField fx:id="addPartMax" layoutX="100.0" layoutY="399.0" prefHeight="26.0" prefWidth="81.0" AnchorPane.leftAnchor="100.0" />
        <Label layoutX="30.0" layoutY="404.0" text="Max" AnchorPane.leftAnchor="30.0" />
        <TextField fx:id="addPartMin" layoutX="286.0" layoutY="400.0" prefHeight="26.0" prefWidth="81.0" AnchorPane.rightAnchor="30.0" />
        <Label layoutX="247.0" layoutY="405.0" text="Min" />
        <TextField fx:id="addPartMachineID" layoutX="100.0" layoutY="461.0" AnchorPane.leftAnchor="100.0" />
