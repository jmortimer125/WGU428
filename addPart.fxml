        <Button fx:id="save" layoutX="240.0" layoutY="548.0" mnemonicParsing="false" onAction="#savePart" text="Save" AnchorPane.bottomAnchor="25.0" AnchorPane.rightAnchor="100.0" />
        <Button fx:id="cancelPart" layoutX="313.0" layoutY="549.0" mnemonicParsing="false" onAction="#cancelAddPart" text="Cancel" AnchorPane.bottomAnchor="25.0" AnchorPane.rightAnchor="20.0" />
    </children>

</AnchorPane>
