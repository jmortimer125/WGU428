<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="software.wgu428.MainController">
    <children>
        <Label text="Inventory Management System" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Pane layoutX="25.0" layoutY="63.0" prefHeight="275.0" prefWidth="450.0" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="25.0" AnchorPane.topAnchor="40.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="Parts">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </Label>
                <TableView fx:id="partsTable" layoutX="4.0" layoutY="28.0" prefHeight="200.0" prefWidth="440.0">
                    <columns>
                        <TableColumn fx:id="partID" prefWidth="70.0" text="Part ID" />
                        <TableColumn fx:id="partName" prefWidth="120.0" text="Part Name" />
                        <TableColumn fx:id="partInventory" prefWidth="120.0" text="Inventory Level" />
                        <TableColumn fx:id="partCost" prefWidth="120.0" text="Price/ Cost per Unit" />
                    </columns>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </TableView>
                <Button fx:id="addPart" layoutX="235.0" layoutY="235.0" mnemonicParsing="false" onAction="#addPartClicked" text="Add">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <Button fx:id="modifyPart" layoutX="290.0" layoutY="235.0" mnemonicParsing="false" onAction="#modifyPartBtn" text="Modify">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <Button fx:id="deletePart" layoutX="360.0" layoutY="235.0" mnemonicParsing="false" onAction="#deletePartBtn" text="Delete">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <TextField fx:id="lookupPart" layoutX="268.0" layoutY="4.0" onAction="#lookUpPart" prefHeight="21.0" prefWidth="170.0" promptText="Search by Part ID or Number">
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                </TextField>
            </children>
        </Pane>
        <Pane layoutX="375.0" layoutY="72.0" prefHeight="275.0" prefWidth="450.0" AnchorPane.bottomAnchor="40.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="40.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="Products">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </Label>
                <TableView fx:id="productsTable" layoutX="4.0" layoutY="28.0" prefHeight="200.0" prefWidth="440.0">
                    <columns>
                        <TableColumn fx:id="productID" prefWidth="70.0" text="Product ID" />
                        <TableColumn fx:id="productName" prefWidth="120.0" text="Product Name" />
                        <TableColumn fx:id="productInventory" prefWidth="120.0" text="Inventory Level" />
                        <TableColumn fx:id="productCost" prefWidth="120.0" text="Price/ Cost per Unit" />
                    </columns>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </TableView>
                <Button layoutX="235.0" layoutY="235.0" mnemonicParsing="false" onAction="#addProductClick" text="Add">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <Button layoutX="290.0" layoutY="235.0" mnemonicParsing="false" onAction="#modifyProductClick" text="Modify">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <Button layoutX="360.0" layoutY="235.0" mnemonicParsing="false" onAction="#deleteProductClick" text="Delete">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Button>
                <TextField fx:id="lookupProduct" layoutX="268.0" layoutY="4.0" onAction="#lookUpProduct" prefHeight="21.0" prefWidth="170.0" promptText="Search by Product  ID or Number">
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                    </padding>
                </TextField>
            </children>
        </Pane>
      <Button layoutX="24.0" layoutY="350.0" mnemonicParsing="false" onAction="#exitclk" text="exit" />
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</AnchorPane>
